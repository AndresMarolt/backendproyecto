doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        title Desafío pugJS
    body 
        div(class="w-50 mx-auto mt-5")
            h1(class="text-primary text-center") Ingrese un producto

            form(action="/productos" method="POST" class="d-flex flex-column gap-2")
                div(class="d-flex flex-column w-75 mx-auto")
                    label(for="" class="fw-bold") Título
                    input(type="text" name="title" placeholder="Título")

                div(class="d-flex flex-column w-75 mx-auto")
                    label(for="" class="fw-bold") Precio
                    input(type="number" name="price" placeholder="Precio")

                div(class="d-flex flex-column w-75 mx-auto")
                    label(for="" class="fw-bold") Thumbnail
                    input(type="text" name="thumbnail" placeholder="Thumbnail")

                input(type="submit" value="Enviar" class="w-75 mx-auto bg-primary p-2 text-light fw-bold border-0")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
