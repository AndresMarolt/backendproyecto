doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        title Desaf√≠o pugJS
    body 
        div(class="w-50 mx-auto mt-5")
            h1(class="text-primary text-center") Productos

            if hasAny
                ul(class="w-75 mx-auto list-unstyled")
                    each prod in prods
                        li(class="border-bottom border-primary border-3")
                            span(class="fw-bold") Producto: 
                            p #{prod.title}
                            
                            span(class="fw-bold") Precio: 
                            p #{prod.price}

                            span(class="fw-bold") Thumbnail: 
                            p #{prod.thumbnail}
        